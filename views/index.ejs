<div class="section white ">
    <h2  class="header center light-blue-text text-darken-4" style="font-family:Roboto;">Select an account</h2>
    <hr width="70%">
    <div class="container">
        <div class="row">
            <div class="col s4">
                <div class="z-depth-4 card">
                    <div class="card-panel waves-block waves-light light-blue darken-4">
                        <p class="card-title white-text center"> Prateek's Account<br>Balance: 2,14,893.75&#8377;</p>
                    </div>
                </div>
            </div>
            <div class="col s4">
                <div class="z-depth-4 card">
                    <div class="card-panel waves-block waves-light white">
                        <a data-toggle="modal" class="modal-trigger" href="#addaccount">
                            <p class="card-title blue-text text-darken-4 center" style="font-size: 34px;">+Account</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id = "addaccount" class="modal white">
    <h5 class="header center light-blue-text text-darken-4" style="font-family:Handlee;">Open an Account</h5>
    <a class="modal-close waves-effect waves-grey btn-flat right" style="top: -45px;"><i class="material-icons">close</i></a>
    <div class="row">
      <form action="/account" method="POST">
        <div class="input-field col s6 offset-s3 center dark-blue-text" style="width: 50%; ">
          <input name = "name" type="text" placeholder = "Account Name" class="validate" required="" aria-required="true" value = "<%=account.name%>">
        </div>
        <div class="input-field col s6 offset-s3 center" style="width: 50%; margin-top: -5px;">
          <input id = "initbal" name = "initbal" type="number" step="0.01" placeholder = "Opening Balance" class="validate" required="" aria-required="true" value = "<%=account.initbal%>">
        </div>
        <div class="input-field col s6 offset-s3 left center" style="width: 50%;">
          <input class="waves-effect waves-light btn light-blue darken-4 white-text" value="OPEN" type="submit">
        </form>
      </div>
    </div>
  </div>